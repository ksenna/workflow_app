.container
	Create a Cohort
	%br
	= form_for @cohort, url: cohorts_path, method: :post do |f|
		Start Date:
		= f.date_field :start_date
		%br
		End Date:
		= f.date_field :end_date
		%br
		Select a Location:
		= f.select :location_id, Location.all.collect {|location| [location.city, location.id]}
		%br
		Select a Course:
		= f.select :course_id, Course.all.collect{|course| [course.name, course.id]}
		%br
		Select an Instructor:
		= f.select :instructor_id, User.all.collect{|user| [user.first_name, user.id]}
		%br
		= f.submit "Create Cohort"