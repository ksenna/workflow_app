.container
	Create a Cohort
	%br
	= form_for @cohort, url: cohorts_path, method: :post do |f|
		Start Date:
		= f.date_field :start_date
		%br
		End Date:
		= f.date_field :end_date
		%br
		Select a Location:
		= f.select :location_id, Location.all.collect {|location| [location.ref_name, location.id]}
		%br
		Select a Course:
		= f.select :course_id, Course.all.collect{|course| [course.name, course.id]}
		%br
		Select an Instructor:
		= f.select :instructor_id, options_from_collection_for_select(@users, :id, :name, 2)
		%br
		= f.submit "Create Cohort"