.container
	%h2 Sign up!
	%br
	= form_for @user, :url => (@user.new_record? ? users_path : user_path(@user)) method: :post do |f|
		= f.hidden_field :role_id, value: 3
		First Name:
		= f.text_field :first_name
		%br
		Last Name:
		= f.text_field :last_name
		%br
		Email:
		= f.email_field :email
		%br
		Password
		= f.password_field :password
		%br
		Password Confirmation
		= f.password_field :password_confirmation
		%br
		= f.submit "Sign up"